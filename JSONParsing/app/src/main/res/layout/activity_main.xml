<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mads.jsonparsing.MainActivity">

    <Button
        android:id="@+id/btnGetJSON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnParseJSON"
        android:layout_weight="1"
        android:onClick="getJSON"
        android:text="Get JSON"
        android:layout_alignEnd="@+id/btnParseJSON" />

    <Button
        android:id="@+id/btnParseJSON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGetJSON"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:onClick="parseJSON"
        android:layout_weight="1"
        android:text="Parse JSON" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnParseJSON"
        android:layout_below="@+id/btnParseJSON"
        android:layout_marginTop="36dp"
        android:text="JSON appears here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>
